enum Permission {
  ADMIN
  USER
  TRIPCREATE
  TRIPDELETE
  TRIPUPDATE
}

type User {
  id: ID! @unique
  name: String!
  email: String! @unique
  password: String!
  resetToken: String
  resetTokenExpiry: String
  permissions: [Permission]
}

type Trip {
  id: ID! @unique
  title: String!
  description: String!
  image: String
  largeImage: String
  createAt: DateTime!
  updateAt: DateTime!
  user: User!
}
