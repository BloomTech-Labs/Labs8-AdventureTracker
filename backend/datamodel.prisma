enum Permission {
  ADMIN
  USER
  TRIPCREATE
  TRIPDELETE
  TRIPUPDATE
  PERMISSIONUPDATE
}

type User {
  id: ID! @unique
  name: String!
  email: String! @unique
  password: String!
  resetToken: String
  resetTokenExpiry: Float
  permissions: [Permission]
}

