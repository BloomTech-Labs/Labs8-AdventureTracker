enum TripFilter {
  FOLLOWING
  ACTIVE
  ARCHIVED
}

type User {
  id: ID! @unique
  name: String!
  email: String! @unique
  password: String!
  trip: [Trip!]! @relation(name: "TripToUser", onDelete: CASCADE)
}

type Trip {
  id: ID! @unique
  user: User! @relation(name: "TripToUser", onDelete: SET_NULL)
  title: String!
  description: String
  archived: Boolean!
  markers: [Marker!]! @relation(name: "MarkerToTrip", onDelete: CASCADE)
  # startDate: DateTime
  # endDate: DateTime
}

type Marker {
  id: ID! @unique
  trip: Trip! @relation(name: "MarkerToTrip", onDelete: SET_NULL)
  hasReached: Boolean!
  checkpointName: String!
  etaTime: DateTime
  checkedInTime: DateTime
  lat: Float!
  lng: Float!
}

